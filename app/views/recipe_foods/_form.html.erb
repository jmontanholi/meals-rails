<%= form_with(model: recipe_food, url: recipe_foods_path(user_id: current_user.id, recipes_id: @recipe.id)) do |form| %>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.text_field :quantity, class: 'input' %>
  </div>

  <%= form.hidden_field :recipe_id, value: @recipe.id %>

  <div class="field">
    <%= form.collection_select :food_id, @foods, :id, :name%>
  </div>

  <div class="actions field">
    <%= form.submit class: 'submit' %>
  </div>
<% end %>
