<section class="recipe-index">
  <p id="notice"><%= notice %></p>

  <h1>Recipes</h1>

  <table>
    <thead class="table-headers">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @recipes.each do |recipe| %>
        <tr class="recipe-row">
          <td><%= recipe.name %></td>
          <td><%= recipe.description %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Recipe', new_recipe_path, class:"link-to" %>
</section>