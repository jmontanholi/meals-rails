<%= form_with(model: @recipe, url: user_recipes_path) do |form| %>

  <div class="field">
    <%= form.label :name%>
    <%= form.text_field :name, class: 'input' %>
  </div>

  <div class="field">
    <%= form.label :preparation_time %>
    <%= form.text_field :preparation_time, class: 'input' %>
  </div>

  <div class="field">
    <%= form.label :cooking_time %>
    <%= form.text_field :cooking_time, class: 'input' %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'input' %>
  </div>

  <div class="field">
    <%= form.label :public %>
    <%= form.check_box :public, class: 'input' %>
  </div>

  <div class="field">
      <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="actions">
    <%= form.submit class: 'submit' %>
  </div>
<% end %>
